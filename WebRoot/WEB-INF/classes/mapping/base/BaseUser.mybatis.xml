<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.mypandora.system.UserEntity">
    <resultMap type="cn.mypandora.system.po.BaseUser" id="BaseUserMap">
        <result property="id" column="id"></result>
        <result property="username" column="user_name"></result>
        <result property="password" column="password"></result>
        <result property="realName" column="real_name"></result>
        <result property="email" column="email"></result>
        <result property="phone" column="phone"></result>
        <result property="mobile" column="mobile"></result>
        <result property="pictureUrl" column="picture_url"></result>
        <result property="sex" column="sex"></result>
        <result property="birthday" column="birthday"></result>
        <result property="lastIp" column="last_ip"></result>
        <result property="lastVisit" column="last_visit"></result>
        <result property="credits" column="credits"></result>
        <result property="createTime" column="create_time"></result>
        <result property="updateTime" column="update_time"></result>
    </resultMap>

    <select id="hasMatchUser" resultMap="BaseUserMap" parameterType="java.util.HashMap">
        select *
        from t_base_user
        where 1=1
        <if test="username!=null">
            and user_name = #{username}
        </if>
        <if test="password!=null">
            and password = #{password}
        </if>
        order by id desc
    </select>

    <select id="findUserByName" resultMap="BaseUserMap" parameterType="String">
        select *
        from t_base_user
        where 1=1
        and user_name = #{username}
    </select>

    <update id="update">
        <![CDATA[
            update  t_base_user 
            set     user_name=#{username, jdbcType=VARCHAR},
                    real_name=#{realName, jdbcType=VARCHAR},
                    email=#{email, jdbcType=VARCHAR},
                    mobile=#{mobile, jdbcType=VARCHAR},
                    phone=#{phone, jdbcType=VARCHAR},
                    picture_url=#{pictureUrl, jdbcType=VARCHAR},
                    sex=#{sex, jdbcType=NUMERIC},
                    birthday=#{birthday, jdbcType=DATE},
                    last_ip=#{lastIp, jdbcType=VARCHAR},
                    credits=#{credits, jdbcType=NUMERIC} 
            WHERE   id = #{id, jdbcType=NUMERIC}
        ]]>
    </update>

    <select id="findAll" resultMap="BaseUserMap">
        select * from t_base_user
    </select>
    
    <select id="pageUsers" resultMap="BaseUserMap">
        select * from t_base_user
    </select>
    <insert id="add" parameterType="cn.mypandora.system.po.BaseUser">
        <![CDATA[
            INSERT INTO t_base_user (
                user_name,
                sex,
                birthday
            ) VALUES (
                #{username, jdbcType=VARCHAR},
                #{sex, jdbcType=NUMERIC},
                #{birthday}
            )
        ]]>
        <selectKey resultType="long" keyProperty="id">
            SELECT LAST_INSERT_ID() AS ID
        </selectKey>
    </insert>
    
    <delete id="delete">
        <![CDATA[
            DELETE from t_base_user 
            WHERE id = #{id}
        ]]> 
    </delete>
    
    <select id="findById" resultMap="BaseUserMap" parameterType="java.lang.Long">
        select * from t_base_user
        where id = #{id}
    </select>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.mypandora.system.service.BaseLogService">
    <cache-ref namespace="cn.mypandora.system.service.BaseUserService"/>
    <resultMap type="baseLog" id="baseLogMap">
        <result property="id" column="id"></result>
        <result property="name" column="name"></result>
        <result property="description" column="description"></result>
        <result property="ip" column="ip"></result>
        <result property="createTime" column="create_time"></result>
        <result property="updateTime" column="update_time"></result>
    </resultMap>

    <sql id="baseLogColumns">id,name,description,ip,create_time,update_time</sql>

    <insert id="add" parameterType="baseLog">
        <![CDATA[
            INSERT INTO t_base_log (
                name,
                description,
                ip
            ) VALUES (
                #{name, jdbcType=VARCHAR},
                #{description, jdbcType=VARCHAR},
                #{ip, jdbcType=VARCHAR}
            )
        ]]>
        <selectKey resultType="long" keyProperty="id">
            SELECT LAST_INSERT_ID() AS ID
        </selectKey>
    </insert>

    <delete id="delete">
        <![CDATA[
            DELETE from t_base_log
            WHERE id = #{id}
        ]]>
    </delete>

    <delete id="deleteBatch">
        <![CDATA[
            DELETE from t_base_log
            WHERE id in
        ]]>
        <foreach collection="array" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <select id="findAll" resultMap="baseLogMap">
        SELECT
        <include refid="baseLogColumns"/>
        FROM t_base_log
        ORDER BY create_time DESC
    </select>

    <select id="pageLogs" resultMap="baseLogMap" parameterType="hashMap">
        SELECT
        <include refid="baseLogColumns"/>
        FROM t_base_log
        WHERE 1=1
        <if test="id!=null">
            AND id = #{id}
        </if>
        ORDER BY create_time DESC
    </select>
</mapper>

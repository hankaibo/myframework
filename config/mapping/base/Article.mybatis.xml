<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.mypandora.system.articleEntity">
    <resultMap type="cn.mypandora.system.po.Article" id="articleMap">
        <result property="id" column="id"></result>
        <result property="title" column="title"></result>
        <result property="author" column="author"></result>
        <result property="time" column="push_time"></result>
        <result property="content" column="content"></result>
        <result property="picturePath" column="picture_path"></result>
        <result property="isTop" column="is_top"></result>
        <result property="topDays" column="top_days"></result>
        <result property="topEndDate" column="top_end_date"></result>
        <result property="isRed" column="is_red"></result>
        <result property="createTime" column="create_time"></result>
        <result property="updateTime" column="update_time"></result>
    </resultMap>

    
    <select id="pageArticles" resultMap="articleMap" parameterType="java.util.HashMap">
        select * 
          from t_article
         where 1=1
      order by id desc
    </select>
    
    <insert id="add" parameterType="cn.mypandora.system.po.Article">
        <![CDATA[
            INSERT INTO t_article (
                title,
                author
            ) VALUES (
                #{title, jdbcType=VARCHAR},
                #{author, jdbcType=VARCHAR}
            )
        ]]>
        <selectKey resultType="long" keyProperty="id">
            SELECT LAST_INSERT_ID() AS ID
        </selectKey>
    </insert>
    
    <delete id="delete">
        <![CDATA[
            DELETE from t_article 
            WHERE id = #{id}
        ]]> 
    </delete>
    
</mapper>